<div id="page4">
    <div class="hash-navbar">
        <a href="/home" class="general">Home</a>
        <a class="general">About</a>
        <div class="dropdown-list">
            <a class="user">Account</a>
            <div class="dropdown-user-content">
                <% if session[:test] %>
                    <% found_user = User.find(session[:test]) %>
                    <%= link_to 'Your account', account_path(found_user) %>
                    <%= link_to 'Logout', '/', :onclick => "'#{session[:test] = nil}'" %>
                <% else %>
                    <%= link_to 'Login', {controller: 'user', action: 'index'} %>
                    <%= link_to 'Register', {controller: 'user', action: 'register'} %>
                <% end %>
            </div>
        </div>
    </div>
    <form action="/account/show" method="GET">
        <input type="text" name="register[name]" placeholder="Username..." maxlength=30>
        <input type="email" name="register[email]" placeholder="Email..." maxlength=30>
        <input type="password" name="register[pass]" placeholder="Password..." maxlength=30>
        <input type="password" name="register[pass]" placeholder="Confirm Password..." maxlength=30>
        <input type="submit" name="submit">
    </form>
    <body id="container">
        
    </body>
</div>
