<div id="user-page">
    <div class="hash-navbar">
        <a href="/home" class="general">Home</a>
        <a class="general">About</a>
        <div class="dropdown-list">
            <a class="user">Account</a>
            <div class="dropdown-user-content">
                <% if session[:test] %>
                    <% found_user = User.find(session[:test]) %>
                    <%= link_to 'Your account', account_path(found_user) %>
                    <%= link_to 'Logout', '/', :onclick => "'#{session[:test] = nil}'" %>
                <% else %>
                    <%= link_to 'Login', {controller: 'user', action: 'index'} %>
                    <%= link_to 'Register', {controller: 'user', action: 'register'} %>
                <% end %>
            </div>
        </div>
    </div>
    <body id="container">
		<div id="header-container">
			<h1>Welcome back, <%= @user.name %>!</h1>
		</div>
		<div id="user-tweets">
			Your tweets
            <table>
                <thead>
                    <tr>
                        <th id="user-name">User</th>
                        <th id="tweet-content">Tweet</th>
                        <th id="num-faves">Favorites</th>
                        <th id="num-retweets">Retweets</th>
                    </tr>
                </thead>
                <!-- THIS GETS THE FIRST 100 TWEETS ASSOCIATED WITH A SPECIFIC HASHTAG-->
                <tbody>
                    <% @user.tweets do |item| %>
                        <tr>
                        	<td class="name"><%= item.name %></td>
                            <td class="content"><%= item.title %></td>
                            <td class="fav-count"><%= item.favorites %></td>
                            <td class="retweets"><%= item.retweets %></td>
                        </tr>
                    <%end%>
                </tbody>
            </table>
		</div>
        <%= session[:test] %><br>
		<%= @user.id %>
    </body>
</div>

